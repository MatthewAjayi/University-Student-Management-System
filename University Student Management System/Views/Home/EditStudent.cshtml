@model IEnumerable<DataLibrary.Models.StudentModel>

@{
    ViewBag.Title = "Edit Student Information";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Edit Student Information</h2>
<hr />
<form class="row g-3" style="margin-top:10px" action=@Url.Action("EditStudent", "Home") method="post">
    <div class="col-auto">
        <label for="Search Student" class="visually-hidden">Search for student</label>
        <input class="form-control" id="searchinput" name="searchInput" placeholder="Search for student">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Search <i class="bi bi-search"></i></button>
    </div>
</form>

@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.AdminId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DegreeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdmissionYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdmissionFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.AdminId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DegreeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdmissionYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdmissionFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditStudentInfo", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteStudent", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
